<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frequent_words_title"
        android:id="@+id/frequent_words_title"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <ImageButton
        android:layout_below="@id/frequent_words_title"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/hillary"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/clinton"/>

    <ImageButton
        android:layout_below="@id/frequent_words_title"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/bernie"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sanders"/>
</RelativeLayout>