<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/politician_card_view"
        android:layout_margin="5dp">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/politician_photo"
                android:scaleType="fitCenter"
                android:layout_margin="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="15dp"/>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/politician_name"
                android:layout_toRightOf="@id/politician_photo"
                android:textColor="#0000FF"
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:id="@+id/politician_word"
                android:layout_toRightOf="@id/politician_photo"
                android:layout_below="@id/politician_name" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/politician_word"
                android:id="@+id/politician_mark"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@id/politician_photo"
                android:text=""/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>